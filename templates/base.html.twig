<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="container">
            <a class="navbar-brand" href="{{ url('homepage') }}"><img src="{{ asset('build/images/logo.png') }}"></a>
        </div>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item{{ app.request.get('_route') == 'homepage' ? ' active' }}">
                            <a class="nav-link" href="{{ url('homepage') }}">Basic Search <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item{{ app.request.get('_route') == 'advanced' ? ' active' }}">
                            <a class="nav-link" href="{{ url('advanced') }}">Advanced Search</a>
                        </li>
                        <li class="nav-item{{ app.request.get('_route') == 'document_index' ? ' active' }}">
                            <a class="nav-link" href="{{ url('document_index') }}">Browse</a>
                        </li>
                        <li class="nav-item{{ app.request.get('_route') == 'analytics' ? ' active' }}">
                            <a class="nav-link" href="{{ url('analytics') }}">Analytics</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <div id="content" class="container">
            {% block body %}{% endblock %}
        </div>
        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}{% endblock %}
    </body>
</html>
