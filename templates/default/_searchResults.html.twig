{% for document in documents %}
    <div class="row">
        <div class="col-lg-12">
            <h5><a href="{{ path('document_show', {'id': document.id}) }}">{{ document.subject|wordwrap(30) }}</a></h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p>{{ document.documentAuthors|join('; ') }},&nbsp;{{ document.yearCreated }}</p>
            <p>{{ document.body }}</p>
            <hr>
        </div>
    </div>
{% endfor %}